#define _CRT_SECURE_NO_WARNINGS
//12.Ввести целое число N. Вывести количество десятичных цифр, необходимых для представления этого числа.
#include <stdio.h>
int main()
{
    int N, i,a;
    a = 1;
    i = 0;
    printf("Enter your number ");
    scanf("%d", &N);
    if (N != 0)
    {
        N = N / 10;
        i++;
    }
    if (N == 0)
    {
        i = 1;
    }
        printf("%d", i);
}
